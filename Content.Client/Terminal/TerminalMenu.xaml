<terminal:TerminalMenu xmlns="https://spacestation14.io" xmlns:terminal="clr-namespace:Content.Client.Terminal" xmlns:pda="clr-namespace:Content.Client.PDA" MinSize="576 450" SetSize="576 450">
    <BoxContainer Name="NavigationBar" HorizontalExpand="True" MinHeight="32" Margin="1 1 3 0">
        <pda:PdaNavigationButton Name="HomeButton" Access="Public" SetWidth="32" CurrentTabBorderThickness="0 0 2 0" IsCurrent="True"/>
        <pda:PdaNavigationButton Name="ProgramListButton" Access="Public" MinWidth="100" LabelText="{Loc 'comp-pda-io-program-list-button'}"/>
        <pda:PdaNavigationButton Name="ProgramTitle" Access="Public" BorderThickness="0 0 0 2" CurrentTabBorderThickness="2 0 0 2" ActiveBgColor="#202023" Visible="False"/>
        <pda:PdaNavigationButton HorizontalExpand="True"/>
        <pda:PdaNavigationButton Name="ProgramCloseButton" Access="Public" IconScale="0.5 0.5" BorderThickness="0 0 2 2" Visible="False" IsActive="False" SetWidth="32"/>
    </BoxContainer>
    <BoxContainer Name="ViewContainer" Access="Public" HorizontalExpand="True" VerticalExpand="True">
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True" HScrollEnabled="True">
            <BoxContainer Name="ProgramList" Access="Public" Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True" MinSize="50 50" Margin="4"/>
        </ScrollContainer>
        <BoxContainer Name="ProgramView" Access="Public" Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True"/>
    </BoxContainer>
    <BoxContainer Name="ContentFooter" HorizontalExpand="True" SetHeight="28" Margin="1 0 2 1">
        <pda:PdaNavigationButton HorizontalExpand="True"/>
    </BoxContainer>
</terminal:TerminalMenu>
