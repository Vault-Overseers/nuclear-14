<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <VBoxContainer>
        <LineEdit Name="SearchBar" HorizontalExpand="True"/>
        <OptionButton Name="OptionCategories"/>
        <VBoxContainer Name="CraftsContainer" HorizontalExpand="True" VerticalExpand="True" />
        <HBoxContainer>
            <SpriteView Name="ItemView" SetSize="64 64" />
            <VBoxContainer>
                <Label Name="ItemName" />
                <RichTextLabel Name="ItemDescription" />
                <VBoxContainer Name="ItemRequirements" />
                <Button Name="CraftButton" Text="Craft" />
            </VBoxContainer>
        </HBoxContainer>
    </VBoxContainer>
</controls:FancyWindow>
